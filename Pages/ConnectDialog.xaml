<Window x:Class="VPSControl.Pages.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="12">
        <TextBlock Text="Host" />
        <TextBox x:Name="HostBox" Width="320" />
        <TextBlock Text="User" Margin="0,6,0,0"/>
        <TextBox x:Name="UserBox" Width="320"/>
        <TextBlock Text="Password" Margin="0,6,0,0"/>
        <PasswordBox x:Name="PasswordBox" Width="320"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Margin="4"/>
            <Button Content="Connect" Click="Connect_Click" Margin="4"/>
        </StackPanel>
    </StackPanel>
</Window>