<Page x:Class="VPSControl.Pages.FTPPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#f7f8fa" Margin=" 8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="LocalList" Grid.Column="0" Background="White" Margin="4"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Button Content="Upload →" Click="Upload_Click" Margin="6"/>
            <Button Content="← Download" Click="Download_Click" Margin="6"/>
        </StackPanel>
        <ListBox x:Name="RemoteList" Grid.Column="2" Background="White" Margin="4"/>
    </Grid>
</Page>