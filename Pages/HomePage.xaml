<Page x:Class="VPSControl.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10" Background="#f7f8fa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- ===== BARRE D'ÉTAT SERVEUR ===== -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Server Status: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" Text="OFFLINE" Foreground="Red" Margin="6,0"/>
            <Button Content="Connect" Click="Connect_Click" Margin="10,0"/>
            <Button Content="Disconnect" Click="Disconnect_Click" Margin="4,0"/>
        </StackPanel>

        <!-- ===== ZONE PRINCIPALE ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Terminal -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="8">
                <DockPanel>
                    <TextBlock Text="Terminal" FontSize="16" FontWeight="Bold" Margin="6"/>
                    <TextBox x:Name="TerminalOutput"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             Margin="6"
                             TextWrapping="Wrap"/>
                </DockPanel>
            </Border>

            <!-- Commandes -->
            <StackPanel Grid.Column="1" Margin="8" VerticalAlignment="Top">
                <!-- Simulation du Placeholder -->
                <TextBox x:Name="CommandBox"
                         Text="Enter command..."
                         Foreground="Gray"
                         GotFocus="CommandBox_GotFocus"
                         LostFocus="CommandBox_LostFocus"
                         Height="28"/>

                <Button Content="Send" 
                        Click="SendCommand_Click" 
                        Margin="0,6,0,0" 
                        Height="30"
                        Style="{StaticResource FrostedButtonStyle}"
                        Foreground="Black" />
                <Button Content="Reboot" 
                        Click="Reboot_Click" 
                        Margin="0,6,0,0" 
                        Height="30"
                        Style="{StaticResource FrostedButtonStyle}"
                        Foreground="Black" />
                <Button Content="Shutdown" Click="Shutdown_Click" Margin="0,6,0,0" Height="30" Style="{StaticResource FrostedButtonStyle}"
                        Foreground="Black"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
