<Page x:Class="VPSControl.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">

    <Grid Background="#f0f2f5">
        <Border Background="White" CornerRadius="10" Margin="30"
                Width="420" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBox x:Name="EmailBox"
                         Text="Email"
                         Foreground="Gray"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         Height="36" Margin="0,6,0,6"/>

                <PasswordBox x:Name="PasswordBox"
                             Height="36" Margin="0,6,0,6"/>

                <Button Content="Login" Click="Login_Click" Height="40" Margin="0,12,0,6"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,6,0,6"/>

                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink Click="Signup_Click">Sign Up</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>