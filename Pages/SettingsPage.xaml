<Page x:Class="VPSControl.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#f7f8fa" Margin="10">
        <StackPanel Width="600" Background="White" Margin="12">
            <TextBlock Text="Server Info" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="Host:" Margin="0,6,0,0"/>
            <TextBox x:Name="HostBox" Height="28" />
            <TextBlock Text="User:" Margin="0,6,0,0"/>
            <TextBox x:Name="UserBox" Height="28"/>
            <TextBlock Text="Backup directory (remote):" Margin="0,6,0,0"/>
            <TextBox x:Name="BackupDirBox" Height="28" Text="/var/backups"/>
            <Button Content="Save" Click="Save_Click" Margin="0,12,0,0" Width="120"/>
        </StackPanel>
    </Grid>
</Page>